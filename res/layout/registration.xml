<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical" >
	<ImageView
        android:id="@+id/imageV_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="230dp"
        android:src="@drawable/newagent"/>

    <ImageView
        android:id="@+id/iV_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageV_logo"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="230dp"
        android:src="@drawable/registerbox" />

    <ImageView
        android:id="@+id/iV_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iV_user"
        android:layout_below="@+id/iV_user"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/login_text" />

    <ImageView
        android:id="@+id/iV_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iV_pass"
        android:layout_below="@+id/iV_pass"
        android:layout_marginTop="14dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/login_text" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/iV_user"
        android:text="PASSWORD" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/iV_pass"
        android:text="CONFIRM PASSWORD" />

    <ImageView
        android:id="@+id/iV_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iB_send"
        android:layout_below="@+id/iV_confirm"
        android:layout_marginTop="14dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/login_text" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/iV_confirm"
        android:text="EMAIL" />

    <ImageButton
        android:id="@+id/iB_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iV_confirm"
        android:layout_below="@+id/iV_email"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="200dp"
        android:maxWidth="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/send" />

    <ImageView
        android:id="@+id/iV_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageV_logo"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="16dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/login_text" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iV_user"
        android:layout_alignTop="@+id/iV_box"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="38dp"
        android:text="IDENTIFICATION" />

    <EditText
        android:id="@+id/eTuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iV_user"
        android:layout_alignBottom="@+id/iV_user"
        android:layout_alignRight="@+id/iV_user"
        android:layout_alignTop="@+id/iV_user"
        android:ems="10"
        android:inputType="text"
        android:singleLine="true"
        android:visibility="invisible" />
    
    <EditText
        android:id="@+id/eTpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iV_pass"
        android:layout_alignLeft="@+id/iV_pass"
        android:layout_alignRight="@+id/iV_pass"
        android:layout_alignTop="@+id/iV_pass"
        android:ems="10"
        android:inputType="text|textVisiblePassword"
        android:singleLine="true"
        android:visibility="invisible" />
    
    <EditText
        android:id="@+id/eTconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iV_confirm"
        android:layout_alignLeft="@+id/iV_confirm"
        android:layout_alignRight="@+id/iV_confirm"
        android:layout_alignTop="@+id/iV_confirm"
        android:ems="10"
        android:inputType="text|textVisiblePassword"
        android:singleLine="true"
        android:visibility="invisible" />
    
   <EditText
       android:id="@+id/eTemail"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/iV_email"
       android:layout_alignLeft="@+id/iV_email"
       android:layout_alignRight="@+id/iV_email"
       android:layout_alignTop="@+id/iV_email"
       android:ems="10"
       android:inputType="text|textEmailAddress"
       android:singleLine="true"
       android:visibility="invisible" />

</RelativeLayout>