<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/backmenu"
    android:orientation="vertical"
    tools:ignore="ContentDescription" >

    <ImageButton
        android:id="@+id/iB_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iB_profile"
        android:layout_marginRight="-15dp"
        android:layout_marginTop="34dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ranking" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="230dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <ImageButton
        android:id="@+id/iB_findgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="210dp"
        android:scaleType="fitCenter"
        android:src="@drawable/findgame" />

    <ImageButton
        android:id="@+id/iB_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iB_quickgrey"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="170dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_button" />

    <ImageButton
        android:id="@+id/iB_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:paddingBottom="30dp"
        android:paddingRight="2dp"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/credit" />

    <ImageButton
        android:id="@+id/iB_gameplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gameplay" />

    <ImageButton
        android:id="@+id/iB_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="30dp"
        android:paddingLeft="2dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/setting" />

    <ImageButton
        android:id="@+id/iB_quickgrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iB_findgame"
        android:layout_marginTop="26dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="300dp"
        android:maxWidth="220dp"
        android:scaleType="fitCenter"
        android:src="@drawable/quickattack_grey" />

</RelativeLayout>